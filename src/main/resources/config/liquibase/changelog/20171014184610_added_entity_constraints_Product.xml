<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Product.
    -->
    <changeSet id="20171014184610-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="product_type_id"
                                 baseTableName="product"
                                 constraintName="fk_product_product_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product_type"/>

        <addForeignKeyConstraint baseColumnNames="products_id"
                                 baseTableName="product_attribute"
                                 constraintName="fk_product_attribute_products_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>
        <addForeignKeyConstraint baseColumnNames="attributes_id"
                                 baseTableName="product_attribute"
                                 constraintName="fk_product_attribute_attributes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="attribute"/>
        
    </changeSet>
</databaseChangeLog>
